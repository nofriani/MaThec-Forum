<%- include('./partials/header.ejs') %>
<!-- Sidenav -->
<%- include('./partials/sidenav.ejs') %>
<!-- Main content -->
<div class="main-content" id="panel">
  <!-- Topnav -->
  <%- include('./partials/navbar.ejs') %>
  <!-- Header -->
  <!-- Header -->
  <div class="header bg-success pb-6">
    <div class="container-fluid">
      <div class="header-body">
        <div class="row align-items-center py-4">
          <div class="col-lg-6 col-7">
            <h6 class="h2 text-white d-inline-block mb-0">MaThec</h6>
            <nav
              aria-label="breadcrumb"
              class="d-none d-md-inline-block ml-md-4"
            >
              <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                <li class="breadcrumb-item">
                  <a href="#"><i class="fas fa-home"></i></a>
                </li>
                <li class="breadcrumb-item"><a href="#">Questionnaire</a></li>
              </ol>
            </nav>
          </div>
        </div>
        <!-- Card stats -->
        <div class="row">
          <div class="col">
            <div class="card">
              <!-- Card header -->
              <div class="card-header">
                <h3 class="mb-0">Report Questionnaire</h3>
                <p class="text-sm mb-0">
                  Table to see questionnaire data reported by users on the
                  MaThec
                </p>
              </div>
              <div class="table-responsive py-4">
                <table class="table table-flush" id="datatable-basic">
                  <thead class="thead-light">
                    <tr>
                      <th>No.</th>
                      <th>Name</th>
                      <th>Amount</th>
                      <th>Score</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% let no=1 %> <% kuisioners.forEach(kuisioner=> { %>

                    <tr
                      style="cursor: pointer"
                      data-toggle="modal"
                      data-target="#kuisioner-report-<%= kuisioner.id %>"
                    >
                      <td><%= no++ %></td>
                      <td><%= kuisioner.name %></td>
                      <td><%= kuisioner.total %></td>
                      <td><%= kuisioner.score %></td>
                      <td>
                        <a
                          href="/kuisioner/<%= kuisioner.id %>"
                          class="btn btn-sm btn-primary"
                        >
                          <i class="fas fa-eye"></i>
                          See
                        </a>
                      </td>
                    </tr>
                    <%});%>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Page content -->
</div>
<%- include('./partials/footer.ejs') %>
